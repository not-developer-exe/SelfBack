<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khaatabook - Your Hisabs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-gray-900 text-white font-sans">
    <main class="w-full min-h-screen flex flex-col items-center px-6 py-10">
        
        <!-- Navbar -->
        <nav class="w-full max-w-5xl flex items-center justify-between px-6 py-4 bg-gray-800 shadow-lg rounded-lg">
            <!-- Left: Brand -->
            <h3 class="text-3xl font-bold text-blue-400 tracking-tight">Khaatabook</h3>

            <!-- Center: Welcome User -->
            <% if (session.user) { %>
                <p class="text-lg font-medium text-gray-300">
                    Welcome, <span class="text-blue-400 text-2xl"><%= session.user.username %></span>
                </p>
            <% } %>

            <!-- Right: Navigation Links -->
            <div class="flex items-center gap-6">
                <a class="text-gray-300 hover:text-white transition" href="/">Home</a>
                <a class="text-gray-300 hover:text-white transition" href="/create">+ New Hisaab</a>

                <% if (session.user) { %>
                    <a class="text-red-400 hover:text-red-500 font-semibold transition" href="/logout">
                        <i class="ri-logout-box-line mr-1"></i> Logout
                    </a>
                <% } else { %>
                    <a class="text-green-400 hover:text-green-500 font-semibold transition" href="/login">
                        <i class="ri-login-box-line mr-1"></i> Login
                    </a>
                <% } %>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="mt-10 w-full max-w-5xl p-6 bg-gray-800 rounded-lg shadow-lg backdrop-blur-lg">
            <h2 class="text-2xl font-semibold tracking-tight mb-6">Your Hisaab Files</h2>

            <% if (files.length === 0) { %>
                <p class="text-gray-400 text-center">No hisabs found. Start by creating a new one!</p>
            <% } else { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% files.forEach(file => { %>
                        <div class="bg-gray-700 p-4 rounded-lg shadow-md hover:shadow-lg transition-all">
                            <h3 class="text-lg font-semibold text-blue-400">
                                <%= file.replace(".txt", "") %>
                            </h3>
                            <p class="text-gray-400 text-sm">
                                <i class="ri-calendar-2-line"></i> 
                                <%= metadata[file.replace(".txt", "")]?.createdAt?.split("T")[0] || "Unknown Date" %>
                            </p>
                            <div class="flex gap-3 mt-3">
                                <a class="px-3 py-1 text-white border border-blue-500 rounded-lg bg-blue-500 hover:bg-blue-400 transition-all" 
                                    href="/hisab/<%= file %>">
                                    <i class="ri-eye-line"></i> View
                                </a>
                                <a class="px-3 py-1 text-white border border-yellow-500 rounded-lg bg-yellow-500 hover:bg-yellow-400 transition-all" 
                                    href="/edit/<%= file %>">
                                    <i class="ri-pencil-line"></i> Edit
                                </a>

                                <!-- Fixed Delete Button (Using POST) -->
                                <form action="/delete/<%= file %>" method="POST" class="inline">
                                    <button type="submit" class="px-3 py-1 text-white border border-red-500 rounded-lg bg-red-500 hover:bg-red-400 transition-all">
                                        <i class="ri-delete-bin-line"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </main>
</body>

</html>