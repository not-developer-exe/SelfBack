<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Hisaab - Khaatabook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-gray-900 text-white font-sans">
    <main class="w-full min-h-screen flex flex-col items-center px-6 py-10">
        
        <!-- Navbar -->
        <nav class="w-full max-w-5xl flex items-center justify-between px-6 py-4 bg-gray-800 shadow-lg rounded-lg">
            <h3 class="text-3xl font-bold text-blue-400">Khaatabook</h3>
            <a class="text-gray-300 hover:text-white transition" href="/">‚Üê Back to Home</a>
        </nav>

        <!-- Create Hisab Form -->
        <div class="mt-10 w-full max-w-3xl p-6 bg-gray-800 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold tracking-tight mb-6 text-blue-400">Create a New Hisaab</h2>

            <% if (error) { %>
                <div class="bg-red-500 text-white px-4 py-2 rounded-lg mb-4">
                    <%= error %>
                </div>
            <% } %>

            <form action="/createhisab" method="POST" class="space-y-4">
                <!-- File Name Input -->
                <div>
                    <label for="filename" class="block text-sm font-medium text-gray-300 mb-2">Hisaab Name</label>
                    <input type="text" id="filename" name="filename" required
                        class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:ring focus:ring-blue-400 outline-none"
                        placeholder="Enter a name for your hisaab..." />
                </div>

                <!-- Content Input -->
                <div>
                    <label for="content" class="block text-sm font-medium text-gray-300 mb-2">Details</label>
                    <textarea id="content" name="content" rows="6" required
                        class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:ring focus:ring-blue-400 outline-none"
                        placeholder="Enter details of your hisaab..."></textarea>
                </div>

                <!-- Encryption Toggle -->
                <div class="flex items-center gap-3">
                    <input type="checkbox" id="encrypt" name="encrypt" class="w-5 h-5 accent-blue-500">
                    <label for="encrypt" class="text-gray-300">Encrypt this hisaab</label>
                </div>

                <!-- Password Input (Only required if encryption is selected) -->
                <div id="password-field" class="hidden">
                    <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Encryption Password</label>
                    <input type="password" id="password" name="password"
                        class="w-full px-4 py-2 bg-gray-700 text-white border border-gray-600 rounded-lg focus:ring focus:ring-blue-400 outline-none"
                        placeholder="Enter a password for encryption..." />
                </div>

                <!-- Submit Button -->
                <button type="submit"
                    class="w-full px-4 py-2 bg-blue-500 hover:bg-blue-400 text-white font-semibold rounded-lg transition-all">
                    <i class="ri-save-line mr-2"></i> Save Hisaab
                </button>
            </form>
        </div>
    </main>

    <script>
        // Show password field only if encryption is selected
        document.getElementById("encrypt").addEventListener("change", function () {
            document.getElementById("password-field").style.display = this.checked ? "block" : "none";
            document.getElementById("password").required = this.checked;
        });
    </script>
</body>
</html>